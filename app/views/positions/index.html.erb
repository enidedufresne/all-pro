<p id="notice"><%= notice %></p>

<h1>Listing Positions</h1>

<table>
  <thead>
    <tr>
      <th>Position name</th>
      <th>Shorthand</th>
      <!-- <th>Offensive</th> -->
      <th>Sport</th>
      <th>Position</th>
      <!-- <th>Sport</th> -->
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.position_name %></td>
        <td><%= position.shorthand %></td>
        <!-- <td><%= position.offensive %></td> -->
        <td><%= position.sport_id %></td>
        <td><%= position.position_id %></td>
        <!-- <td><%= position.sport %></td> -->
        <td><%= position.user %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

