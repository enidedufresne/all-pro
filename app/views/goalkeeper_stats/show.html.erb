<div id="event-<%= @goalkeeper_stat.id %>" class="event">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <div class="info">
  <%= render 'shared/avatar', user: @goalkeeper_stat.user %>
  <h4 class="name"><%= @goalkeeper_stat.user.name %></h4>
  <span class="action">created a <%= link_to 'Starting Pitcher ', @goalkeeper_stat %>stat</span>
</div>
<div class="content">
  <h3><%= @goalkeeper_stat.event %></h3>
  <span class="text">
    
    <% if @goalkeeper_stat.win.present? %>
<p>
  <strong>Win:</strong>
  <%= @goalkeeper_stat.win %>
</p>
    <% end %>
    <% if @goalkeeper_stat.draw.present? %>
<p>
  <strong>Draw:</strong>
  <%= @goalkeeper_stat.draw %>
</p>
    <% end %>

<p>
 Score:
  <%= @goalkeeper_stat.score %> - <%= @goalkeeper_stat.opponent_score %>
</p>

    <% if @goalkeeper_stat.saves.present? %>
<p>
  <strong>Saves:</strong>
  <%= @goalkeeper_stat.saves %>
</p>
    <% end %>
    <% if @goalkeeper_stat.shots_faced.present? %>
<p>
  <strong>Shots faced:</strong>
  <%= @goalkeeper_stat.shots_faced %>
</p>
    <% end %>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <h4>Comments</h4>
      <hr>
      <%= render 'comments/form', commentable: @goalkeeper_stat %>
      <br>
      <div class="comments">
        <%= render(@comments) || render('shared/no_resource', resources: 'Comments') %>
      </div>
    </div>
  </div>
</div>