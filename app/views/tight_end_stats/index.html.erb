<div class="row">
<div class="col-lg-12 well">
<p id="notice"><%= notice %></p>

<h1>Listing Tight End Stats</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <th>Win</th>
      <th>Score</th>
      <th>Receptions</th>
      <th>Reception yards</th>
      <th>Reception touchdowns</th>
      <th>Pancakes</th>
      <th>Athlete</th>
    </tr>
  </thead>

  <tbody>
    <% @tight_end_stats.each do |tight_end_stat| %>
      <tr>
        <td><%= tight_end_stat.event %></td>
        <td><%= tight_end_stat.win ? 'Yes' : 'No' %></td>
        <td><%= tight_end_stat.score %> - <%= tight_end_stat.opponent_score %></td>
        <td><%= tight_end_stat.receptions %></td>
        <td><%= tight_end_stat.reception_yards %></td>
        <td><%= tight_end_stat.reception_touchdowns %></td>
        <td><%= tight_end_stat.pancakes %></td>
        <td><%= tight_end_stat.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>