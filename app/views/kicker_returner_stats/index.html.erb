<div class="row">
<div class="col-lg-12 well">
<p id="notice"><%= notice %></p>

<h1>Listing Kick Returner Stats</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <th>Win</th>
      <th>Score</th>
      <th>Kickreturns</th>
      <th>Kickreturn yards</th>
      <th>Kickreturn touchdowns</th>
      <th>Athlete</th>
    </tr>
  </thead>

  <tbody>
    <% @kicker_returner_stats.each do |kicker_returner_stat| %>
      <tr>
        <td><%= kicker_returner_stat.event %></td>
        <td><%= kicker_returner_stat.win ? 'Yes' : 'No' %></td>
        <td><%= kicker_returner_stat.score %> - <%= kicker_returner_stat.opponent_score %></td>
        <td><%= kicker_returner_stat.kickreturns %></td>
        <td><%= kicker_returner_stat.kickreturn_yards %></td>
        <td><%= kicker_returner_stat.kickreturn_touchdowns %></td>
        <td><%= kicker_returner_stat.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>