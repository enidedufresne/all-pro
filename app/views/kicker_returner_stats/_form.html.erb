<%= form_for(@kicker_returner_stat) do |f| %>
  <div class="field">
    <%= f.label :event %><br>
    <%= f.text_field :event, class: 'form-control', autofocus: true, placeholder: "ex. Reds v. Blues" %>
  </div>
  <!-- <div class="field">
    <%= f.label :games_played %><br>
    <%= f.number_field :games_played %>
  </div> -->
  <div class="field">
    <%= f.label :kickreturns %><br>
    <%= f.number_field :kickreturns, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :kickreturn_yards %><br>
    <%= f.number_field :kickreturn_yards, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :kickreturn_touchdowns %><br>
    <%= f.number_field :kickreturn_touchdowns, class: 'form-control', autofocus: true %>
  </div>
    <div class="field">
    <%= f.label "Win? Check box" %> <i>(leave blank, if not)</i><br>
    <%= f.check_box :win %>
  </div>
    <div class="field">
    <%= f.label "Your final score" %><br>
    <%= f.text_field :score, class: 'form-control', autofocus: true %>
  </div>
    <div class="field">
    <%= f.label "Opponent's final score" %><br>
    <%= f.text_field :opponent_score, class: 'form-control', autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit :create, class: 'btn btn-primary' %>
  </div>
<% end %>
