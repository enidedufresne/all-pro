<div class="info">
  <%= render 'shared/avatar', user: catcher_stat.user %>
  <h4 class="name"><%= catcher_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'catcher_stat', catcher_stat %></span>
</div>
<div class="content">
  <h3><%= catcher_stat.event %></h3>
  <span class="text">




<p>
  <strong>Win:</strong>
  <%= catcher_stat.win %>
</p>

<p>
  <strong>Plate appearances:</strong>
  <%= catcher_stat.plate_appearances %>
</p>

<p>
  <strong>At bats:</strong>
  <%= catcher_stat.at_bats %>
</p>

<p>
  <strong>Hits:</strong>
  <%= catcher_stat.hits %>
</p>

<p>
  <strong>Runs scored:</strong>
  <%= catcher_stat.runs_scored %>
</p>

<p>
  <strong>Runs batted in:</strong>
  <%= catcher_stat.runs_batted_in %>
</p>

<p>
  <strong>Walks:</strong>
  <%= catcher_stat.walks %>
</p>

<p>
  <strong>Strike outs:</strong>
  <%= catcher_stat.strike_outs %>
</p>

<p>
  <strong>Stolen bases:</strong>
  <%= catcher_stat.stolen_bases %>
</p>

<p>
  <strong>Doubles:</strong>
  <%= catcher_stat.doubles %>
</p>

<p>
  <strong>Triples:</strong>
  <%= catcher_stat.triples %>
</p>

<p>
  <strong>Home runs:</strong>
  <%= catcher_stat.home_runs %>
</p>






  </span>
  <%= render 'shared/created_at', activity: catcher_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(catcher_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(catcher_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(catcher_stat) %>
        <%= form_tag catcher_stat_path(catcher_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: catcher_stat %>