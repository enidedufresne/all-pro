<div class="info">
  <%= render 'shared/avatar', user: running_back_stat.user %>
  <h4 class="name"><%= running_back_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'running_back_stat', running_back_stat %></span>
</div>
<div class="content">
  <h3><%= running_back_stat.event %></h3>
  <span class="text">
    
<p>
  <strong>Win:</strong>
  <%= running_back_stat.win %>
</p>

<p>
  <strong>Rushing attempts:</strong>
  <%= running_back_stat.rushing_attempts %>
</p>

<p>
  <strong>Rushing yards:</strong>
  <%= running_back_stat.rushing_yards %>
</p>

<p>
  <strong>Rushing touchdowns:</strong>
  <%= running_back_stat.rushing_touchdowns %>
</p>

<p>
  <strong>Receptions:</strong>
  <%= running_back_stat.receptions %>
</p>

<p>
  <strong>Reception yards:</strong>
  <%= running_back_stat.reception_yards %>
</p>

<p>
  <strong>Reception touchdowns:</strong>
  <%= running_back_stat.reception_touchdowns %>
</p>

<p>
  <strong>Fumbles:</strong>
  <%= running_back_stat.fumbles %>
</p>

    
  </span>
  <%= render 'shared/created_at', activity: running_back_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(running_back_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(running_back_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(running_back_stat) %>
        <%= form_tag running_back_stat_path(running_back_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: running_back_stat %>