<div class="row">
<div class="col-lg-12 well">
<p id="notice"><%= notice %></p>

<h1>Listing Running Back Stats</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <th>Win</th>
      <th>Score</th>
      <th>Rushing attempts</th>
      <th>Rushing yards</th>
      <th>Rushing touchdowns</th>
      <th>Receptions</th>
      <th>Reception yards</th>
      <th>Reception touchdowns</th>
      <th>Fumbles</th>
      <th>Athlete</th>
    </tr>
  </thead>

  <tbody>
    <% @running_back_stats.each do |running_back_stat| %>
      <tr>
        <td><%= running_back_stat.event %></td>
        <td><%= running_back_stat.win ? 'Yes' : 'No' %></td>
        <td><%= running_back_stat.score %> - <%= running_back_stat.opponent_score %></td>
        <td><%= running_back_stat.rushing_attempts %></td>
        <td><%= running_back_stat.rushing_yards %></td>
        <td><%= running_back_stat.rushing_touchdowns %></td>
        <td><%= running_back_stat.receptions %></td>
        <td><%= running_back_stat.reception_yards %></td>
        <td><%= running_back_stat.reception_touchdowns %></td>
        <td><%= running_back_stat.fumbles %></td>
        <td><%= running_back_stat.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>