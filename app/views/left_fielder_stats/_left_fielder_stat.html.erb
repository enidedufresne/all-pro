<div class="info">
  <%= render 'shared/avatar', user: left_fielder_stat.user %>
  <h4 class="name"><%= left_fielder_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'left_fielder_stat', left_fielder_stat %></span>
</div>
<div class="content">
  <h3><%= left_fielder_stat.event %></h3>
  <span class="text">
   
<p>
  Win:
  <%= left_fielder_stat.win ? 'Yes' : 'No' %>
</p>

<p>
 score:
  <%= left_fielder_stat.score %> - <%= left_fielder_stat.opponent_score %>
</p>

<span class="points"><%= link_to 'view more stats', left_fielder_stat %></span>


   
  </span>
  <%= render 'shared/created_at', activity: left_fielder_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(left_fielder_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(left_fielder_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(left_fielder_stat) %>
        <%= form_tag left_fielder_stat_path(left_fielder_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: left_fielder_stat %>