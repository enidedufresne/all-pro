<div class="info">
  <%= render 'shared/avatar', user: left_fielder_stat.user %>
  <h4 class="name"><%= left_fielder_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'left_fielder_stat', left_fielder_stat %></span>
</div>
<div class="content">
  <h3><%= left_fielder_stat.event %></h3>
  <span class="text">
   
<p>
  <strong>Win:</strong>
  <%= left_fielder_stat.win %>
</p>

<p>
  <strong>Plate appearances:</strong>
  <%= left_fielder_stat.plate_appearances %>
</p>

<p>
  <strong>At bats:</strong>
  <%= left_fielder_stat.at_bats %>
</p>

<p>
  <strong>Hits:</strong>
  <%= left_fielder_stat.hits %>
</p>

<p>
  <strong>Runs scored:</strong>
  <%= left_fielder_stat.runs_scored %>
</p>

<p>
  <strong>Runs batted in:</strong>
  <%= left_fielder_stat.runs_batted_in %>
</p>

<p>
  <strong>Walks:</strong>
  <%= left_fielder_stat.walks %>
</p>

<p>
  <strong>Strike outs:</strong>
  <%= left_fielder_stat.strike_outs %>
</p>

<p>
  <strong>Stolen bases:</strong>
  <%= left_fielder_stat.stolen_bases %>
</p>

<p>
  <strong>Doubles:</strong>
  <%= left_fielder_stat.doubles %>
</p>

<p>
  <strong>Triples:</strong>
  <%= left_fielder_stat.triples %>
</p>

<p>
  <strong>Home runs:</strong>
  <%= left_fielder_stat.home_runs %>
</p>


   
  </span>
  <%= render 'shared/created_at', activity: left_fielder_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(left_fielder_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(left_fielder_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(left_fielder_stat) %>
        <%= form_tag left_fielder_stat_path(left_fielder_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: left_fielder_stat %>