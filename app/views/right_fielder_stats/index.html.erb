<div class="row">
<div class="col-lg-12 well">
<p id="notice"><%= notice %></p>

<h1>Listing Right Fielder Stats</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <!-- <th>Games started</th>-->
      <th>Win</th>
      <th>Score</th>
      <th>Plate appearances</th>
      <th>At bats</th>
      <th>Hits</th>
      <th>Runs scored</th>
      <th>Runs batted in</th>
      <th>Walks</th>
      <th>Strike outs</th>
      <th>Stolen bases</th>
      <th>Doubles</th>
      <th>Triples</th>
      <th>Home runs</th>
      <th>Athlete</th>
    </tr>
  </thead>

  <tbody>
    <% @right_fielder_stats.each do |right_fielder_stat| %>
      <tr>
        <td><%= right_fielder_stat.event %></td>
        <!-- <td><%= right_fielder_stat.games_started %></td> -->
        <td><%= right_fielder_stat.win ? 'Yes' : 'No' %></td>
        <td><%= right_fielder_stat.score %> - <%= right_fielder_stat.opponent_score %></td>
        <td><%= right_fielder_stat.plate_appearances %></td>
        <td><%= right_fielder_stat.at_bats %></td>
        <td><%= right_fielder_stat.hits %></td>
        <td><%= right_fielder_stat.runs_scored %></td>
        <td><%= right_fielder_stat.runs_batted_in %></td>
        <td><%= right_fielder_stat.walks %></td>
        <td><%= right_fielder_stat.strike_outs %></td>
        <td><%= right_fielder_stat.stolen_bases %></td>
        <td><%= right_fielder_stat.doubles %></td>
        <td><%= right_fielder_stat.triples %></td>
        <td><%= right_fielder_stat.home_runs %></td>
        <td><%= right_fielder_stat.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>