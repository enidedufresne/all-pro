<p id="notice"><%= notice %></p>

<h1>Listing Stats</h1>

<table>
  <thead>
    <tr>
      <th>Stat name</th>
      <th>Position</th>
      <th>Sport</th>
      <th>User</th>
      <th>Sport</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.stat_name %></td>
        <td><%= stat.position_id %></td>
        <td><%= stat.sport_id %></td>
        <td><%= stat.user %></td>
        <td><%= stat.sport %></td>
        <td><%= stat.position %></td>
        <td><%= link_to 'Show', stat %></td>
        <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
        <td><%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

