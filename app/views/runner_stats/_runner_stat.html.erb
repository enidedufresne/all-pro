<div class="info">
  <%= render 'shared/avatar', user: runner_stat.user %>
  <h4 class="name"><%= runner_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'runner_stat', runner_stat %></span>
</div>
<div class="content">
  <h3><%= runner_stat.event %></h3>
  <span class="text">
    

<p>
  Win:
  <%= runner_stat.win ? 'Yes' : 'No' %>
</p>

<span class="points"><%= link_to 'view more stats', runner_stat %></span>



  </span>
  <%= render 'shared/created_at', activity: runner_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(runner_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(runner_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(runner_stat) %>
        <%= form_tag runner_stat_path(runner_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: runner_stat %>