<div class="info">
  <%= render 'shared/avatar', user: power_forward_stat.user %>
  <h4 class="name"><%= power_forward_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'power_forward_stat', power_forward_stat %></span>
</div>
<div class="content">
  <h3><%= power_forward_stat.event %></h3>
  <span class="text">

<p>
  <strong>Win:</strong>
  <%= power_forward_stat.win %>
</p>

<p>
  <strong>Minutes played:</strong>
  <%= power_forward_stat.minutes_played %>
</p>

<p>
  <strong>Fieldgoals made:</strong>
  <%= power_forward_stat.fieldgoals_made %>
</p>

<p>
  <strong>Fieldgoal attemps:</strong>
  <%= power_forward_stat.fieldgoal_attemps %>
</p>

<p>
  <strong>Threepoints made:</strong>
  <%= power_forward_stat.threepoints_made %>
</p>

<p>
  <strong>Threepoint attemps:</strong>
  <%= power_forward_stat.threepoint_attemps %>
</p>

<p>
  <strong>Freethrows made:</strong>
  <%= power_forward_stat.freethrows_made %>
</p>

<p>
  <strong>Freethrow attemps:</strong>
  <%= power_forward_stat.freethrow_attemps %>
</p>

<p>
  <strong>Rebounds:</strong>
  <%= power_forward_stat.rebounds %>
</p>

<p>
  <strong>Assists:</strong>
  <%= power_forward_stat.assists %>
</p>

<p>
  <strong>Steals:</strong>
  <%= power_forward_stat.steals %>
</p>

<p>
  <strong>Blocks:</strong>
  <%= power_forward_stat.blocks %>
</p>

<p>
  <strong>Points:</strong>
  <%= power_forward_stat.points %>
</p>

    
  </span>
  <%= render 'shared/created_at', activity: power_forward_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(power_forward_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(power_forward_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(power_forward_stat) %>
        <%= form_tag power_forward_stat_path(power_forward_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: power_forward_stat %>