<p id="notice"><%= notice %></p>

<h1>Listing Midfielder Stats</h1>

<table>
  <thead>
    <tr>
      <th>Position name</th>
      <th>Shorthand</th>
      <th>Sport</th>
      <th>Position</th>
      <th>Sport name</th>
      <th>Event</th>
      <th>Games played</th>
      <th>Win</th>
      <th>Loss</th>
      <th>Draw</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Draws</th>
      <th>Goals</th>
      <th>Assists</th>
      <th>Shots taken</th>
      <th>User</th>
      <th>Stat</th>
      <th>Sport</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @midfielder_stats.each do |midfielder_stat| %>
      <tr>
        <td><%= midfielder_stat.position_name %></td>
        <td><%= midfielder_stat.shorthand %></td>
        <td><%= midfielder_stat.sport_id %></td>
        <td><%= midfielder_stat.position_id %></td>
        <td><%= midfielder_stat.sport_name %></td>
        <td><%= midfielder_stat.event %></td>
        <td><%= midfielder_stat.games_played %></td>
        <td><%= midfielder_stat.win %></td>
        <td><%= midfielder_stat.loss %></td>
        <td><%= midfielder_stat.draw %></td>
        <td><%= midfielder_stat.wins %></td>
        <td><%= midfielder_stat.losses %></td>
        <td><%= midfielder_stat.draws %></td>
        <td><%= midfielder_stat.goals %></td>
        <td><%= midfielder_stat.assists %></td>
        <td><%= midfielder_stat.shots_taken %></td>
        <td><%= midfielder_stat.user.try(:name) %></td>
        <td><%= midfielder_stat.stat %></td>
        <td><%= midfielder_stat.sport %></td>
        <td><%= midfielder_stat.position %></td>
        <td><%= link_to 'Show', midfielder_stat %></td>
        <td><%= link_to 'Edit', edit_midfielder_stat_path(midfielder_stat) %></td>
        <td><%= link_to 'Destroy', midfielder_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

