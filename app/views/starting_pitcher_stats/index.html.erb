<div class="row">
<div class="col-lg-12 well">
<p id="notice"><%= notice %></p>

<h1>Listing Starting Pitcher Stats</h1>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
<!--       <th>Games started</th>
      <th>Games played</th> -->
      <th>Win</th>
      <th>Score</th>
<!--      <th>Loss</th>
      <th>Wins</th>
      <th>Losses</th> -->
      <th>Pitcher win</th>
<!--      <th>Pitcher loss</th>
      <th>Pitcher wins</th>
      <th>Pitcher losses</th> -->
      <th>Pitcher no decision</th>
<!--       <th>Pitcher no decisions</th> -->
      <th>Pitcher saves</th>
      <th>Innings pitched</th>
      <th>Hits allowed</th>
      <th>Runs allowed</th>
      <th>Strikeouts</th>
      <th>Walks allowed</th>
      <th>Athlete</th>
    </tr>
  </thead>

  <tbody>
    <% @sprinter_stats.each do |sprinter_stat| %>
      <tr>
        <td><%= sprinter_stat.event %></td>
<!--         <td><%= sprinter_stat.games_started %></td>
        <td><%= sprinter_stat.games_played %></td> -->
        <td><%= sprinter_stat.win ? 'Yes' : 'No' %></td>
        <td><%= sprinter_stat.score %> - <%= sprinter_stat.opponent_score %></td>
<!--        <td><%= sprinter_stat.loss ? 'Yes' : 'No' %></td>
         <td><%= sprinter_stat.wins %></td>
        <td><%= sprinter_stat.losses %></td> -->
        <td><%= sprinter_stat.pitcher_win ? 'Yes' : 'No' %></td>
<!--        <td><%= sprinter_stat.pitcher_loss ? 'Yes' : 'No' %></td>
        <td><%= sprinter_stat.pitcher_wins %></td>
        <td><%= sprinter_stat.pitcher_losses %></td> -->
        <td><%= sprinter_stat.pitcher_no_decision ? 'Yes' : 'No' %></td>
<!--         <td><%= sprinter_stat.pitcher_no_decisions ? 'Yes' : 'No' %></td> -->
        <td><%= sprinter_stat.pitcher_saves %></td>
        <td><%= sprinter_stat.innings_pitched %></td>
        <td><%= sprinter_stat.hits_allowed %></td>
        <td><%= sprinter_stat.runs_allowed %></td>
        <td><%= sprinter_stat.strikeouts %></td>
        <td><%= sprinter_stat.walks_allowed %></td>
        <td><%= sprinter_stat.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

</div>
</div>
