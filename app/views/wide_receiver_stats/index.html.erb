<p id="notice"><%= notice %></p>

<h1>Listing Wide Receiver Stats</h1>

<table>
  <thead>
    <tr>
      <th>Position name</th>
      <th>Shorthand</th>
      <th>Sport</th>
      <th>Position</th>
      <th>Sport name</th>
      <th>Event</th>
      <th>Games played</th>
      <th>Win</th>
      <th>Loss</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Receptions</th>
      <th>Reception yards</th>
      <th>Reception touchdowns</th>
      <th>Fumbles</th>
      <th>User</th>
      <th>Stat</th>
      <th>Sport</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wide_receiver_stats.each do |wide_receiver_stat| %>
      <tr>
        <td><%= wide_receiver_stat.position_name %></td>
        <td><%= wide_receiver_stat.shorthand %></td>
        <td><%= wide_receiver_stat.sport_id %></td>
        <td><%= wide_receiver_stat.position_id %></td>
        <td><%= wide_receiver_stat.sport_name %></td>
        <td><%= wide_receiver_stat.event %></td>
        <td><%= wide_receiver_stat.games_played %></td>
        <td><%= wide_receiver_stat.win %></td>
        <td><%= wide_receiver_stat.loss %></td>
        <td><%= wide_receiver_stat.wins %></td>
        <td><%= wide_receiver_stat.losses %></td>
        <td><%= wide_receiver_stat.receptions %></td>
        <td><%= wide_receiver_stat.reception_yards %></td>
        <td><%= wide_receiver_stat.reception_touchdowns %></td>
        <td><%= wide_receiver_stat.fumbles %></td>
        <td><%= wide_receiver_stat.user.try(:name) %></td>
        <td><%= wide_receiver_stat.stat %></td>
        <td><%= wide_receiver_stat.sport %></td>
        <td><%= wide_receiver_stat.position %></td>
        <td><%= link_to 'Show', wide_receiver_stat %></td>
        <td><%= link_to 'Edit', edit_wide_receiver_stat_path(wide_receiver_stat) %></td>
        <td><%= link_to 'Destroy', wide_receiver_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

