<div id="event-<%= @line_backer_stat.id %>" class="event">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <div class="info">
  <%= render 'shared/avatar', user: @line_backer_stat.user %>
  <h4 class="name"><%= @line_backer_stat.user.name %></h4>
  <span class="action">created a <%= link_to 'Starting Pitcher ', @line_backer_stat %>stat</span>
</div>
<div class="content">
  <h3><%= @line_backer_stat.event %></h3>
  <span class="text">

<p>
  <strong>Win:</strong>
  <%= @line_backer_stat.win %>
</p>
<p>
 Score:
  <%= @line_backer_stat.score %> - <%= @line_backer_stat.opponent_score %>
</p>
<p>
  <strong>Tackles:</strong>
  <%= @line_backer_stat.tackles %>
</p>

<p>
  <strong>Sacks:</strong>
  <%= @line_backer_stat.sacks %>
</p>

<p>
  <strong>Fumbles:</strong>
  <%= @line_backer_stat.fumbles %>
</p>

<p>
  <strong>Interception:</strong>
  <%= @line_backer_stat.interception %>
</p>

  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <h4>Comments</h4>
      <hr>
      <%= render 'comments/form', commentable: @line_backer_stat %>
      <br>
      <div class="comments">
        <%= render(@comments) || render('shared/no_resource', resources: 'Comments') %>
      </div>
    </div>
  </div>
</div>