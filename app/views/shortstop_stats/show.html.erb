<div id="event-<%= @shortstop_stat.id %>" class="event">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <div class="info">
  <%= render 'shared/avatar', user: @shortstop_stat.user %>
  <h4 class="name"><%= @shortstop_stat.user.name %></h4>
  <span class="action">created a <%= link_to 'Starting Pitcher ', @shortstop_stat %>stat</span>
</div>
<div class="content">
  <h3><%= @shortstop_stat.event %></h3>
  <span class="text">
<!-- <p>
  <strong>Games started:</strong>
  <%= @shortstop_stat.games_started %>
</p>
 -->

<p>
  <strong>Win:</strong>
  <%= @shortstop_stat.win %>
</p>
<p>
 Score:
  <%= @shortstop_stat.score %> - <%= @shortstop_stat.opponent_score %>
</p>

    <% if @shortstop_stat.plate_appearances.present? %>
<p>
  <strong>Plate appearances:</strong>
  <%= @shortstop_stat.plate_appearances %>
</p>
    <% end %>
    <% if @shortstop_stat.at_bats.present? %>
<p>
  <strong>At bats:</strong>
  <%= @shortstop_stat.at_bats %>
</p>
    <% end %>
    <% if @shortstop_stat.hits.present? %>
<p>
  <strong>Hits:</strong>
  <%= @shortstop_stat.hits %>
</p>
    <% end %>
    <% if @shortstop_stat.runs_scored.present? %>
<p>
  <strong>Runs scored:</strong>
  <%= @shortstop_stat.runs_scored %>
</p>
    <% end %>
    <% if @shortstop_stat.runs_batted_in.present? %>
<p>
  <strong>Runs batted in:</strong>
  <%= @shortstop_stat.runs_batted_in %>
</p>
    <% end %>
    <% if @shortstop_stat.walks.present? %>
<p>
  <strong>Walks:</strong>
  <%= @shortstop_stat.walks %>
</p>
    <% end %>
    <% if @shortstop_stat.strike_outs.present? %>
<p>
  <strong>Strike outs:</strong>
  <%= @shortstop_stat.strike_outs %>
</p>
    <% end %>
    <% if @shortstop_stat.stolen_bases.present? %>
<p>
  <strong>Stolen bases:</strong>
  <%= @shortstop_stat.stolen_bases %>
</p>
    <% end %>
    <% if @shortstop_stat.doubles.present? %>
<p>
  <strong>Doubles:</strong>
  <%= @shortstop_stat.doubles %>
</p>
    <% end %>
    <% if @shortstop_stat.triples.present? %>
<p>
  <strong>Triples:</strong>
  <%= @shortstop_stat.triples %>
</p>
    <% end %>
    <% if @shortstop_stat.home_runs.present? %>
<p>
  <strong>Home runs:</strong>
  <%= @shortstop_stat.home_runs %>
</p>
    <% end %>

  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <h4>Comments</h4>
      <hr>
      <%= render 'comments/form', commentable: @shortstop_stat %>
      <br>
      <div class="comments">
        <%= render(@comments) || render('shared/no_resource', resources: 'Comments') %>
      </div>
    </div>
  </div>
</div>