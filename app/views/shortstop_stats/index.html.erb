<div class="row">
<div class="col-lg-12 well">
<p id="notice"><%= notice %></p>

<h1>Listing Shortstop Stats</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
     <!--  <th>Games started</th> -->
      <th>Win</th>
      <th>Score</th>
      <th>Plate appearances</th>
      <th>At bats</th>
      <th>Hits</th>
      <th>Runs scored</th>
      <th>Runs batted in</th>
      <th>Walks</th>
      <th>Strike outs</th>
      <th>Stolen bases</th>
      <th>Doubles</th>
      <th>Triples</th>
      <th>Home runs</th>
      <th>Athlete</th>
    </tr>
  </thead>

  <tbody>
    <% @shortstop_stats.each do |shortstop_stat| %>
      <tr>
        <td><%= shortstop_stat.event %></td>
        <!-- <td><%= shortstop_stat.games_started %></td> -->
        <td><%= shortstop_stat.win ? 'Yes' : 'No' %></td>
        <td><%= shortstop_stat.score %> - <%= shortstop_stat.opponent_score %></td>
        <td><%= shortstop_stat.plate_appearances %></td>
        <td><%= shortstop_stat.at_bats %></td>
        <td><%= shortstop_stat.hits %></td>
        <td><%= shortstop_stat.runs_scored %></td>
        <td><%= shortstop_stat.runs_batted_in %></td>
        <td><%= shortstop_stat.walks %></td>
        <td><%= shortstop_stat.strike_outs %></td>
        <td><%= shortstop_stat.stolen_bases %></td>
        <td><%= shortstop_stat.doubles %></td>
        <td><%= shortstop_stat.triples %></td>
        <td><%= shortstop_stat.home_runs %></td>
        <td><%= shortstop_stat.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>