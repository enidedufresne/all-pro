<%= form_for(@small_forward_stat) do |f| %>
  <div class="field">
    <%= f.label :event %><br>
    <%= f.text_field :event, class: 'form-control', autofocus: true, placeholder: "ex. Reds v. Blues" %>
  </div>
  <!-- <div class="field">
    <%= f.label :games_started %><br>
    <%= f.number_field :games_started %>
  </div>-->
  <div class="field">
    <%= f.label :minutes_played %><br>
    <%= f.number_field :minutes_played, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :fieldgoals_made %><br>
    <%= f.number_field :fieldgoals_made, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :fieldgoal_attemps %><br>
    <%= f.number_field :fieldgoal_attemps, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :threepoints_made %><br>
    <%= f.number_field :threepoints_made, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :threepoint_attemps %><br>
    <%= f.number_field :threepoint_attemps, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :freethrows_made %><br>
    <%= f.number_field :freethrows_made, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :freethrow_attemps %><br>
    <%= f.number_field :freethrow_attemps, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :rebounds %><br>
    <%= f.number_field :rebounds, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :assists %><br>
    <%= f.number_field :assists, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :steals %><br>
    <%= f.number_field :steals, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :blocks %><br>
    <%= f.number_field :blocks, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :points %><br>
    <%= f.number_field :points, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "Win? Check box" %> <i>(leave blank, if not)</i><br>
    <%= f.check_box :win %>
  </div>
    <div class="field">
    <%= f.label "Your final score" %><br>
    <%= f.text_field :score, class: 'form-control', autofocus: true %>
  </div>
    <div class="field">
    <%= f.label "Opponent's final score" %><br>
    <%= f.text_field :opponent_score, class: 'form-control', autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit :create, class: 'btn btn-primary' %>
  </div>
<% end %>
