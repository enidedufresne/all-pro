<div class="info">
  <%= render 'shared/avatar', user: relief_pitcher_stat.user %>
  <h4 class="name"><%= relief_pitcher_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'relief_pitcher_stat', relief_pitcher_stat %></span>
</div>
<div class="content">
  <h3><%= relief_pitcher_stat.event %></h3>
  <span class="text">
    <!-- <%= fa_icon'calendar' %> <%= formatted_time(event.when) %> -->
  </span>
  <%= render 'shared/created_at', activity: relief_pitcher_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(relief_pitcher_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(relief_pitcher_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(relief_pitcher_stat) %>
        <%= form_tag relief_pitcher_stat_path(relief_pitcher_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: relief_pitcher_stat %>