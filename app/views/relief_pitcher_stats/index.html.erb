<div class="row">
<div class="col-lg-12 well">
<p id="notice"><%= notice %></p>

<h1>Listing Relief Pitcher Stats</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <!-- <th>Games started</th> -->
      <th>Win</th>
      <th>Score</th>
      <th>Pitcher win</th>
      <th>Pitcher no decision</th>
      <th>Pitcher saves</th>
      <th>Innings pitched</th>
      <th>Hits allowed</th>
      <th>Runs allowed</th>
      <th>Strikeouts</th>
      <th>Walks allowed</th>
      <th>Athlete</th>
    </tr>
  </thead>

  <tbody>
    <% @relief_pitcher_stats.each do |relief_pitcher_stat| %>
      <tr>
        <td><%= relief_pitcher_stat.event %></td>
        <!-- <td><%= relief_pitcher_stat.games_started %></td>-->
        <td><%= relief_pitcher_stat.win ? 'Yes' : 'No' %></td>
        <td><%= relief_pitcher_stat.score %> - <%= relief_pitcher_stat.opponent_score %></td>
        <td><%= relief_pitcher_stat.pitcher_win ? 'Yes' : 'No' %></td>
        <td><%= relief_pitcher_stat.pitcher_no_decision ? 'Yes' : 'No' %></td>
        <td><%= relief_pitcher_stat.pitcher_saves %></td>
        <td><%= relief_pitcher_stat.innings_pitched %></td>
        <td><%= relief_pitcher_stat.hits_allowed %></td>
        <td><%= relief_pitcher_stat.runs_allowed %></td>
        <td><%= relief_pitcher_stat.strikeouts %></td>
        <td><%= relief_pitcher_stat.walks_allowed %></td>
        <td><%= relief_pitcher_stat.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>