<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h3>Edit Profile</h3>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :avatar %>
          <br>
          <%= render 'shared/avatar', user: @user %>
          <br>
          <br>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.label :cover %>
          <br>
          <%= render 'shared/cover', user: @user %>
          <br>
          <%= f.file_field :cover %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'Full Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :about %>
          <%= f.text_area :about, placeholder: 'About', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :location %>
          <%= f.text_field :location, placeholder: 'Location', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, placeholder: 'Phone Number', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :dob %>
          <%= f.text_field :dob, placeholder: 'Date of Birth', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :sex %><br>
          <%= f.select :sex, options_for_seasons, class: 'form-control', prompt: 'Select One' %>
        </div>
        <div class="form-group">
          <%= f.label :institution %><br>
          <%= f.text_field :institution, placeholder: 'School or Institution Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :year %><br>
          <%= f.select :year, options_for_year, class: 'form-control', prompt: 'Select One' %>
        </div>
        <div class="form-group">
          <%= f.label :coach_name %><br>
          <%= f.text_field :coach_name, placeholder: 'Coach Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, placeholder: 'ex. Head Coach or Athletic Trainer', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :coach_phone %><br>
          <%= f.text_field :coach_phone, placeholder: 'Coach Phone', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :gpa %><br>
          <%= f.text_field :gpa, placeholder: 'GPA', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :feet %><br>
          <%= f.text_field :feet, placeholder: 'Feet', class: 'form-control' %>
          <%= f.label :inches %><br>
          <%= f.text_field :inches, placeholder: 'Inches', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :weight %><br>
          <%= f.text_field :weight, placeholder: 'Weight', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :bmi %><br>
          <%= f.text_field :bmi, placeholder: 'BMI', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :bench %><br>
          <%= f.text_field :bench, placeholder: 'Bench Press', class: 'form-control' %>
        </div>
        <div class="actions">
          <%= submit_tag 'Update', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>