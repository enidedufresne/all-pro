<div class="info">
  <%= render 'shared/avatar', user: defensive_tackle_stat.user %>
  <h4 class="name"><%= defensive_tackle_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'defensive_tackle_stat', defensive_tackle_stat %></span>
</div>
<div class="content">
  <h3><%= defensive_tackle_stat.event %></h3>
  <span class="text">
    
<p>
  <strong>Win:</strong>
  <%= @defensive_tackle_stat.win %>
</p>

<p>
  <strong>Loss:</strong>
  <%= @defensive_tackle_stat.loss %>
</p>

<p>
  <strong>Wins:</strong>
  <%= @defensive_tackle_stat.wins %>
</p>

<p>
  <strong>Losses:</strong>
  <%= @defensive_tackle_stat.losses %>
</p>

<p>
  <strong>Tackles:</strong>
  <%= @defensive_tackle_stat.tackles %>
</p>

<p>
  <strong>Sacks:</strong>
  <%= @defensive_tackle_stat.sacks %>
</p>

<p>
  <strong>Fumbles:</strong>
  <%= @defensive_tackle_stat.fumbles %>
</p>

<p>
  <strong>Interception:</strong>
  <%= @defensive_tackle_stat.interception %>
</p>

    
  </span>
  <%= render 'shared/created_at', activity: defensive_tackle_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(defensive_tackle_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(defensive_tackle_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(defensive_tackle_stat) %>
        <%= form_tag defensive_tackle_stat_path(defensive_tackle_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: defensive_tackle_stat %>