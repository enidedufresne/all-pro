<div id="event-<%= @point_guard_stat.id %>" class="event">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <div class="info">
  <%= render 'shared/avatar', user: @point_guard_stat.user %>
  <h4 class="name"><%= @point_guard_stat.user.name %></h4>
  <span class="action">created a <%= link_to 'Starting Pitcher ', @point_guard_stat %>stat</span>
</div>
<div class="content">
  <h3><%= @point_guard_stat.event %></h3>
  <span class="text">

<p>
  <strong>Win:</strong>
  <%= @point_guard_stat.win %>
</p>
<p>
 Score:
  <%= @point_guard_stat.score %> - <%= @point_guard_stat.opponent_score %>
</p>

    <% if @point_guard_stat.minutes_played.present? %>
<p>
  <strong>Minutes played:</strong>
  <%= @point_guard_stat.minutes_played %>
</p>
    <% end %>
    <% if @point_guard_stat.fieldgoals_made.present? %>
<p>
  <strong>Fieldgoals made:</strong>
  <%= @point_guard_stat.fieldgoals_made %>
</p>
    <% end %>
    <% if @point_guard_stat.fieldgoal_attemps.present? %>
<p>
  <strong>Fieldgoal attemps:</strong>
  <%= @point_guard_stat.fieldgoal_attemps %>
</p>
    <% end %>
    <% if @point_guard_stat.threepoints_made.present? %>
<p>
  <strong>Threepoints made:</strong>
  <%= @point_guard_stat.threepoints_made %>
</p>
    <% end %>
    <% if @point_guard_stat.threepoint_attemps.present? %>
<p>
  <strong>Threepoint attemps:</strong>
  <%= @point_guard_stat.threepoint_attemps %>
</p>
    <% end %>
    <% if @point_guard_stat.freethrows_made.present? %>
<p>
  <strong>Freethrows made:</strong>
  <%= @point_guard_stat.freethrows_made %>
</p>
    <% end %>
    <% if @point_guard_stat.freethrow_attemps.present? %>
<p>
  <strong>Freethrow attemps:</strong>
  <%= @point_guard_stat.freethrow_attemps %>
</p>
    <% end %>
    <% if @point_guard_stat.rebounds.present? %>
<p>
  <strong>Rebounds:</strong>
  <%= @point_guard_stat.rebounds %>
</p>
    <% end %>
    <% if @point_guard_stat.assists.present? %>
<p>
  <strong>Assists:</strong>
  <%= @point_guard_stat.assists %>
</p>
    <% end %>
    <% if @point_guard_stat.steals.present? %>
<p>
  <strong>Steals:</strong>
  <%= @point_guard_stat.steals %>
</p>
    <% end %>
    <% if @point_guard_stat.blocks.present? %>
<p>
  <strong>Blocks:</strong>
  <%= @point_guard_stat.blocks %>
</p>
    <% end %>
    <% if @point_guard_stat.points.present? %>
<p>
  <strong>Points:</strong>
  <%= @point_guard_stat.points %>
</p>
    <% end %>
    

  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <h4>Comments</h4>
      <hr>
      <%= render 'comments/form', commentable: @point_guard_stat %>
      <br>
      <div class="comments">
        <%= render(@comments) || render('shared/no_resource', resources: 'Comments') %>
      </div>
    </div>
  </div>
</div>