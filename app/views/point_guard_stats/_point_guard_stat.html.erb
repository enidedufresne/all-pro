<div class="info">
  <%= render 'shared/avatar', user: point_guard_stat.user %>
  <h4 class="name"><%= point_guard_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'point_guard_stat', point_guard_stat %></span>
</div>
<div class="content">
  <h3><%= point_guard_stat.event %></h3>
  <span class="text">
    
<p>
  Win:
  <%= point_guard_stat.win %>
</p>

<p>
  Minutes played:
  <%= point_guard_stat.minutes_played %>
</p>

<p>
  Fieldgoals made:
  <%= point_guard_stat.fieldgoals_made %>
</p>

<p>
  Fieldgoal attemps:
  <%= point_guard_stat.fieldgoal_attemps %>
</p>

<p>
  Threepoints made:
  <%= point_guard_stat.threepoints_made %>
</p>

<p>
  Threepoint attemps:
  <%= point_guard_stat.threepoint_attemps %>
</p>

<p>
  Freethrows made:
  <%= point_guard_stat.freethrows_made %>
</p>

<p>
  Freethrow attemps:
  <%= point_guard_stat.freethrow_attemps %>
</p>

<p>
  Rebounds:
  <%= point_guard_stat.rebounds %>
</p>

<p>
  Assists:
  <%= point_guard_stat.assists %>
</p>

<p>
  Steals:
  <%= point_guard_stat.steals %>
</p>

<p>
  Blocks:
  <%= point_guard_stat.blocks %>
</p>

<p>
  Points:
  <%= point_guard_stat.points %>
</p>


    
  </span>
  <%= render 'shared/created_at', activity: point_guard_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(point_guard_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(point_guard_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(point_guard_stat) %>
        <%= form_tag point_guard_stat_path(point_guard_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: point_guard_stat %>