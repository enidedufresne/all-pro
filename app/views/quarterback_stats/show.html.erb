<div id="event-<%= @quarterback_stat.id %>" class="event">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <div class="info">
  <%= render 'shared/avatar', user: @quarterback_stat.user %>
  <h4 class="name"><%= @quarterback_stat.user.name %></h4>
  <span class="action">created a <%= link_to 'Starting Pitcher ', @quarterback_stat %>stat</span>
</div>
<div class="content">
  <h3><%= @quarterback_stat.event %></h3>
  <span class="text">


<p>
  <strong>Win:</strong>
  <%= @quarterback_stat.win %>
</p>
<p>
 Score:
  <%= @quarterback_stat.score %> - <%= @quarterback_stat.opponent_score %>
</p>

    <% if @quarterback_stat.pass_completions.present? %>
<p>
  <strong>Pass completions:</strong>
  <%= @quarterback_stat.pass_completions %>
</p>
    <% end %>
    <% if @quarterback_stat.pass_attempts.present? %>
<p>
  <strong>Pass attempts:</strong>
  <%= @quarterback_stat.pass_attempts %>
</p>
    <% end %>
    <% if @quarterback_stat.passing_yards.present? %>
<p>
  <strong>Passing yards:</strong>
  <%= @quarterback_stat.passing_yards %>
</p>
    <% end %>
    <% if @quarterback_stat.passing_touchdowns.present? %>
<p>
  <strong>Passing touchdowns:</strong>
  <%= @quarterback_stat.passing_touchdowns %>
</p>
    <% end %>
    <% if @quarterback_stat.rushing_attempts.present? %>
<p>
  <strong>Rushing attempts:</strong>
  <%= @quarterback_stat.rushing_attempts %>
</p>
    <% end %>
    <% if @quarterback_stat.rushing_yards.present? %>
<p>
  <strong>Rushing yards:</strong>
  <%= @quarterback_stat.rushing_yards %>
</p>
    <% end %>
    <% if @quarterback_stat.rushing_touchdowns.present? %>
<p>
  <strong>Rushing touchdowns:</strong>
  <%= @quarterback_stat.rushing_touchdowns %>
</p>
    <% end %>
    <% if @quarterback_stat.fumbles.present? %>
<p>
  <strong>Fumbles:</strong>
  <%= @quarterback_stat.fumbles %>
</p>
    <% end %>
    <% if @quarterback_stat.interception.present? %>
<p>
  <strong>Interception:</strong>
  <%= @quarterback_stat.interception %>
</p>
    <% end %>

  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <h4>Comments</h4>
      <hr>
      <%= render 'comments/form', commentable: @quarterback_stat %>
      <br>
      <div class="comments">
        <%= render(@comments) || render('shared/no_resource', resources: 'Comments') %>
      </div>
    </div>
  </div>
</div>