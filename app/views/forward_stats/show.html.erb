<div id="event-<%= @forward_stat.id %>" class="event">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <div class="info">
  <%= render 'shared/avatar', user: @forward_stat.user %>
  <h4 class="name"><%= @forward_stat.user.name %></h4>
  <span class="action">created a <%= link_to 'Starting Pitcher ', @forward_stat %>stat</span>
</div>
<div class="content">
  <h3><%= @forward_stat.event %></h3>
  <span class="text">


<p>
  <strong>Win:</strong>
  <%= @forward_stat.win %>
</p>
<p>
 Score:
  <%= @forward_stat.score %> - <%= @forward_stat.opponent_score %>
</p>
<p>
  <strong>Draw:</strong>
  <%= @forward_stat.draw %>
</p>

<p>
  <strong>Goals:</strong>
  <%= @forward_stat.goals %>
</p>

<p>
  <strong>Assists:</strong>
  <%= @forward_stat.assists %>
</p>

<p>
  <strong>Shots taken:</strong>
  <%= @forward_stat.shots_taken %>
</p>

  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 well">
      <h4>Comments</h4>
      <hr>
      <%= render 'comments/form', commentable: @forward_stat %>
      <br>
      <div class="comments">
        <%= render(@comments) || render('shared/no_resource', resources: 'Comments') %>
      </div>
    </div>
  </div>
</div>
