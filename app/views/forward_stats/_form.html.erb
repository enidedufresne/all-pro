<%= form_for(@forward_stat) do |f| %>
  <div class="field">
    <%= f.label :event %><br>
    <%= f.text_field :event, class: 'form-control', autofocus: true, placeholder: "ex. Reds v. Blues" %>
  </div>
  <!-- <div class="field">
    <%= f.label :games_played %><br>
    <%= f.number_field :games_played %>
  </div> -->
  <div class="field">
    <%= f.label :goals %><br>
    <%= f.number_field :goals, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :assists %><br>
    <%= f.number_field :assists, class: 'form-control', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :shots_taken %><br>
    <%= f.number_field :shots_taken, class: 'form-control', autofocus: true %>
  </div>
    <div class="field">
    <%= f.label "Win? Check box" %> <i>(leave blank, if not)</i><br>
    <%= f.check_box :win %>
  </div>  
  <div class="field">
    <%= f.label "Draw? Check box" %> <i>(leave blank, if not)</i><br>
    <%= f.check_box :draw %>
  </div>
    <div class="field">
    <%= f.label "Your final score" %><br>
    <%= f.text_field :score, class: 'form-control', autofocus: true %>
  </div>
    <div class="field">
    <%= f.label "Opponent's final score" %><br>
    <%= f.text_field :opponent_score, class: 'form-control', autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit :create, class: 'btn btn-primary' %>
  </div>
<% end %>
