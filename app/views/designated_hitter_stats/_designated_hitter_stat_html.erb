<div class="info">
  <%= render 'shared/avatar', user: designated_hitter_stat.user %>
  <h4 class="name"><%= designated_hitter_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'designated_hitter_stat', designated_hitter_stat %></span>
</div>
<div class="content">
  <h3><%= designated_hitter_stat.event %></h3>
  <span class="text">

<p>
  Win:
  <%= designated_hitter_stat.win %>
</p>

<p>
  Plate appearances:
  <%= designated_hitter_stat.plate_appearances %>
</p>

<p>
  At bats:
  <%= designated_hitter_stat.at_bats %>
</p>

<p>
  Hits:
  <%= designated_hitter_stat.hits %>
</p>

<p>
  Runs scored:
  <%= designated_hitter_stat.runs_scored %>
</p>

<p>
  Runs batted in:
  <%= designated_hitter_stat.runs_batted_in %>
</p>

<p>
  Walks:
  <%= designated_hitter_stat.walks %>
</p>

<p>
  Strike outs:
  <%= designated_hitter_stat.strike_outs %>
</p>

<p>
  Stolen bases:
  <%= designated_hitter_stat.stolen_bases %>
</p>

<p>
  Doubles:
  <%= designated_hitter_stat.doubles %>
</p>

<p>
  Triples:
  <%= designated_hitter_stat.triples %>
</p>

<p>
  Home runs:
  <%= designated_hitter_stat.home_runs %>
</p>


  </span>
  <%= render 'shared/created_at', activity: designated_hitter_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(designated_hitter_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(designated_hitter_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(designated_hitter_stat) %>
        <%= form_tag designated_hitter_stat_path(designated_hitter_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: designated_hitter_stat %>