<div class="row">
<div class="col-lg-12 well">
<p id="notice"><%= notice %></p>

<h1>Listing Designated Hitter Stats</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event</th>
<!--       <th>Games started</th>-->
      <th>Win</th>
      <th>Score</th>
      <th>Plate appearances</th>
      <th>At bats</th>
      <th>Hits</th>
      <th>Runs scored</th>
      <th>Runs batted in</th>
      <th>Walks</th>
      <th>Strike outs</th>
      <th>Stolen bases</th>
      <th>Doubles</th>
      <th>Triples</th>
      <th>Home runs</th>
      <th>Athlete</th>
    </tr>
  </thead>

  <tbody>
    <% @designated_hitter_stats.each do |designated_hitter_stat| %>
      <tr>
        <td><%= designated_hitter_stat.event %></td>
<!--         <td><%= designated_hitter_stat.games_started %></td>-->
        <td><%= designated_hitter_stat.win ? 'Yes' : 'No' %></td>
        <td><%= designated_hitter_stat.score %> - <%= designated_hitter_stat.opponent_score %></td>
        <td><%= designated_hitter_stat.plate_appearances %></td>
        <td><%= designated_hitter_stat.at_bats %></td>
        <td><%= designated_hitter_stat.hits %></td>
        <td><%= designated_hitter_stat.runs_scored %></td>
        <td><%= designated_hitter_stat.runs_batted_in %></td>
        <td><%= designated_hitter_stat.walks %></td>
        <td><%= designated_hitter_stat.strike_outs %></td>
        <td><%= designated_hitter_stat.stolen_bases %></td>
        <td><%= designated_hitter_stat.doubles %></td>
        <td><%= designated_hitter_stat.triples %></td>
        <td><%= designated_hitter_stat.home_runs %></td>
        <td><%= designated_hitter_stat.user.try(:name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>