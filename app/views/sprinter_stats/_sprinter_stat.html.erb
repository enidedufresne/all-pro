<div class="info">
  <%= render 'shared/avatar', user: sprinter_stat.user %>
  <h4 class="name"><%= sprinter_stat.user.name %></h4>
  <span class="action">created an <%= link_to 'sprinter_stat', sprinter_stat %></span>
</div>
<div class="content">
  <h3><%= sprinter_stat.event %></h3>
  <span class="text">
    
<p>
  Win:
  <%= sprinter_stat.win ? 'Yes' : 'No' %>
</p>

<span class="points"><%= link_to 'view more stats', sprinter_stat %></span>

    
  </span>
  <%= render 'shared/created_at', activity: sprinter_stat %>
  <div class="points">
    <span class="like-count"><%= pluralize(sprinter_stat.cached_votes_up, 'like') %></span>
    <span class="comment-count"><%= pluralize(sprinter_stat.comments_count, 'comment') %></span>
    <div class="pull-right">
      <% if belongs_to_user?(sprinter_stat) %>
        <%= form_tag sprinter_stat_path(sprinter_stat), method: :delete, remote: remote do %>
          <% button_tag class: 'btn btn-danger btn-sm' do %>
            <%= fa_icon 'trash' %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/actions', resource: sprinter_stat %>